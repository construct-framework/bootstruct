	<version>3.0.3 beta</version>
	<description>TPL_BOOTSTRUCT_DESCRIPTION</description>
	<files>
		<folder>css</folder>
		<folder>elements</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<filename>apple-touch-icon.png</filename>
